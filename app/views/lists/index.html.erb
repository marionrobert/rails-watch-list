<div class="banner text-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://momartre.net/wp-content/uploads/2017/10/cin%C3%A9ma.jpg');">
  <div class="container">
    <h1>Welcome</h1>
  </div>
</div>

<div class="container mx-7 pt-5">

  <h1>My lists</h1>

  <div class="row my-4">
    <% @lists.each do |list|  %>
      <div class="card-category col-4 mx-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
      url('<%= cl_image_path list.photo.key, height: 300, width: 400, crop: :fill %>')">
        <%= link_to list_path(list) do %>
          <%= list.name %>
        <% end %>
      </div>
    <% end  %>
  </div>

  <div class="row my-6">
    <div class="col text-center">
    <%= link_to "Create a movie list", new_list_path, :class => "btn btn-ghost" %>
    </div>
  </div>
</div>

<br>
